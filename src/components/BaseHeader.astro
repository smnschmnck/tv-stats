---
import { Clapperboard } from "@lucide/astro";
import { getLocaleLink } from "../i18n/utils";
import { LanguageSwitcher } from "./LanguageSwitcher";
import { ThemeSwitcher } from "./ThemeSwitcher";
import { SettingsDropdown } from "./SettingsDropdown";

const rootUrl = getLocaleLink(Astro.currentLocale, "/");
---

<header
  class="fixed z-10 flex min-h-24 w-full items-center justify-between gap-4 bg-white px-8 dark:bg-zinc-900 md:px-12"
>
  <a class="flex items-center gap-2 font-bold select-none" href={rootUrl}>
    <Clapperboard />
    <span class="hidden md:block">TV Stats</span>
  </a>
  <slot />
  <div class="flex items-center gap-1">
    <div class="md:hidden">
      <SettingsDropdown client:load />
    </div>
    <div class="hidden items-center gap-1 md:flex">
      <LanguageSwitcher client:load />
      <ThemeSwitcher client:load />
    </div>
  </div>
</header>
