---
import { TMDB_SECRET_ACCESS_KEY } from "astro:env/server";
import type { TvShowListResponse } from "../../../types/tmdbApi/tvShow";
import TvShowLink from "../../../components/TvShowLink.astro";

const getPopularShows = async () => {
  try {
    const res = await fetch(
      "https://api.themoviedb.org/3/tv/popular?language=en-US&page=1",
      {
        headers: {
          accept: "application/json",
          Authorization: `Bearer ${TMDB_SECRET_ACCESS_KEY}`,
        },
      }
    );

    if (!res.ok) {
      console.error("TMDB error:", res.status, res.statusText);
      return null;
    }

    return (await res.json()) as TvShowListResponse;
  } catch (err) {
    console.error("Fetch failed:", err);
    return null;
  }
};

const shows = await getPopularShows();
---

{
  !!shows && (
    <div class="flex w-full flex-wrap items-center justify-center gap-8 bg-zinc-50 px-8 md:px-20">
      {shows?.results.map((show) => (
        <TvShowLink show={show} />
      ))}
    </div>
  )
}

{!shows && <p>something went wrong</p>}
