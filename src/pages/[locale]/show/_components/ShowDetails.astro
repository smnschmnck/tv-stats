---
import type { TVShowDetails } from "../../../../types/tmdbApi/tvShowDetails";
import { tmdbFetch } from "../../../../utils/tmdbFetch";
import EpisodeRankings from "./EpisodeRankings.astro";
import ShowRating from "./ShowRating.astro";
import WatchProviders from "./WatchProviders.astro";

const { t } = Astro.locals;

interface Props {
  showId: string;
  imdbId: string | undefined;
}

const { showId, imdbId } = Astro.props;

const getShowDetails = async () => {
  try {
    const res = await tmdbFetch(`/tv/${showId}`, {
      locale: Astro.currentLocale,
    });

    if (!res.ok) {
      return { error: t("show.notFound"), showDetails: undefined };
    } else {
      const showDetails = (await res.json()) as TVShowDetails;
      return { error: undefined, showDetails };
    }
  } catch (e) {
    return { error: t("show.notFound"), showDetails: undefined };
  }
};

const { error, showDetails } = await getShowDetails();
---

{!!error && <p>{error}</p>}
{
  !error && (
    <div class="flex flex-col gap-3">
      <h1 class="text-lg font-bold">{showDetails!.name}</h1>
      <ShowRating imdbId={imdbId} />
      <div class="flex gap-2">
        {showDetails!.poster_path && (
          <a
            target="_blank"
            rel="noopener noreferrer"
            href={`https://www.imdb.com/title/${imdbId}/`}
          >
            <img
              class="min-w-36 rounded-xl"
              src={`https://image.tmdb.org/t/p/w500/${showDetails!.poster_path}`}
              alt={`${showDetails!.name} poster`}
            />
          </a>
        )}
        <div class="flex flex-col gap-2">
          <EpisodeRankings imdbId={imdbId} />
        </div>
      </div>
      <p>{showDetails!.overview}</p>
      <WatchProviders />
    </div>
  )
}
